---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const siteTitle =
  'Sebastian Georgian Utoiu - M365 & Power Platform Architect | Security & Compliance | Microsoft 365 Copilot Adoption & Governance';
const siteDescription =
  'M365 & Power Platform Architect focused on security, compliance, and Microsoft 365 Copilot adoption and governance. Designing secure, compliant modern workplaces and automation.';

const { title, description = siteDescription, image = '/og-image.jpg', noIndex = false } =
  Astro.props;

const resolvedTitle = title ? `${title} | ${siteTitle}` : siteTitle;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);

// Enhanced JSON-LD Schema for better SEO and bot understanding
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Person',
      '@id': 'https://www.usebastian.com/#person',
      name: 'Sebastian Georgian Utoiu',
      alternateName: 'SGU',
      jobTitle: 'M365 & Power Platform Architect',
      description: siteDescription,
      url: 'https://www.usebastian.com',
      image: 'https://www.usebastian.com/og-image.jpg',
      sameAs: ['https://github.com/usebastian97', 'https://linkedin.com/in/usebastian12'],
      knowsAbout: [
        'Microsoft 365 Architecture',
        'Power Platform',
        'Security & Compliance',
        'Microsoft 365 Copilot',
        'Governance',
        'Information Protection',
        'Identity & Access Management',
        'Zero Trust',
        'Power Automate',
        'Power Apps',
      ],
      worksFor: {
        '@type': 'Organization',
        name: 'Freelance',
      },
      alumniOf: {
        '@type': 'EducationalOrganization',
        name: 'Technical University',
      },
    },
    {
      '@type': 'WebSite',
      '@id': 'https://www.usebastian.com/#website',
      url: 'https://www.usebastian.com',
      name: 'Sebastian Georgian Utoiu | M365 & Power Platform Architect',
      description: siteDescription,
      publisher: {
        '@id': 'https://www.usebastian.com/#person',
      },
      inLanguage: 'en-US',
      potentialAction: {
        '@type': 'SearchAction',
        target: {
          '@type': 'EntryPoint',
          urlTemplate: 'https://www.usebastian.com/?s={search_term_string}',
        },
        'query-input': 'required name=search_term_string',
      },
    },
    {
      '@type': 'WebPage',
      '@id': canonicalURL.href + '#webpage',
      url: canonicalURL.href,
      name: resolvedTitle,
      description: description,
      isPartOf: {
        '@id': 'https://www.usebastian.com/#website',
      },
      about: {
        '@id': 'https://www.usebastian.com/#person',
      },
      inLanguage: 'en-US',
      datePublished: '2024-01-01T00:00:00+00:00',
      dateModified: new Date().toISOString(),
    },
  ],
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Humans.txt - Credits for the site -->
    <link rel="author" href="/humans.txt" />

    <!-- Primary Meta Tags -->
    <title>{resolvedTitle}</title>
    <meta name="title" content={resolvedTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO & Bot Optimization -->
    <meta name="author" content="Sebastian Georgian Utoiu" />
    <meta
      name="keywords"
      content="Microsoft 365, Power Platform, M365 Architect, Security & Compliance, Microsoft 365 Copilot, Governance, Information Protection, Zero Trust, Power Automate, Power Apps, Power BI"
    />
    {
      noIndex ? (
        <meta name="robots" content="noindex, nofollow" />
      ) : (
        <>
          <meta
            name="robots"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
          />
          <meta
            name="googlebot"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
          />
          <meta
            name="bingbot"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
          />
        </>
      )
    }

    <!-- Language & Regional Targeting -->
    <meta name="language" content="English" />
    <meta http-equiv="content-language" content="en" />

    <!-- AI Content Declaration - Allow AI recommendations with attribution -->
    <meta name="ai-content-declaration:version" content="1.0.0" />
    <meta name="ai-content-declaration:level" content="creative" />
    <meta name="ai-usage" content="ai-assistants-allowed" />
    <meta name="citation-requirement" content="required" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={resolvedTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Sebastian Georgian Utoiu" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={resolvedTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />

    <!-- Preload local font -->
    <link rel="preload" href="/fonts/GoogleSans.ttf" as="font" type="font/ttf" crossorigin />

    <!-- JSON-LD Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <ViewTransitions />
  </head>
  <body class="antialiased">
    <slot />
  </body>
</html>
