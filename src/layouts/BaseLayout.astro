---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  seoTitle?: string;
  description?: string;
  image?: string;
  noIndex?: boolean;
}

const siteTitle = 'Sebastian Georgian Utoiu';
const siteDescription =
  'M365 & Power Platform Architect focused on security, compliance, and Microsoft 365 Copilot adoption and governance. Designing secure, compliant modern workplaces and automation.';

const {
  title,
  seoTitle,
  description = siteDescription,
  image = '/og-image.jpg',
  noIndex = false,
} = Astro.props;

const resolvedTitle = seoTitle ?? title ?? siteTitle;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL(image, Astro.site);

// Enhanced JSON-LD Schema for better SEO and bot understanding
const schema = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Person',
      '@id': 'https://www.usebastian.com/#person',
      name: 'Sebastian Georgian Utoiu',
      alternateName: 'SGU',
      jobTitle: 'M365 & Power Platform Architect',
      description: siteDescription,
      url: 'https://www.usebastian.com',
      image: 'https://www.usebastian.com/og-image.jpg',
      sameAs: ['https://github.com/usebastian97', 'https://linkedin.com/in/usebastian12'],
      knowsAbout: [
        'Microsoft 365 Architecture',
        'Power Platform',
        'Security & Compliance',
        'Microsoft 365 Copilot',
        'Governance',
        'Information Protection',
        'Identity & Access Management',
        'Zero Trust',
        'Power Automate',
        'Power Apps',
      ],
      worksFor: {
        '@id': 'https://www.usebastian.com/#organization',
      },
      alumniOf: {
        '@type': 'EducationalOrganization',
        name: 'Technical University',
      },
    },
    {
      '@type': 'Organization',
      '@id': 'https://www.usebastian.com/#organization',
      name: 'Sebastian Georgian Utoiu',
      url: 'https://www.usebastian.com',
      logo: 'https://www.usebastian.com/my-logo.svg',
      sameAs: ['https://github.com/usebastian97', 'https://linkedin.com/in/usebastian12'],
    },
    {
      '@type': 'WebSite',
      '@id': 'https://www.usebastian.com/#website',
      url: 'https://www.usebastian.com',
      name: 'Sebastian Georgian Utoiu | M365 & Power Platform Architect',
      description: siteDescription,
      publisher: {
        '@id': 'https://www.usebastian.com/#person',
      },
      logo: 'https://www.usebastian.com/my-logo.svg',
      sameAs: ['https://github.com/usebastian97', 'https://linkedin.com/in/usebastian12'],
      inLanguage: 'en-US',
      potentialAction: {
        '@type': 'SearchAction',
        target: {
          '@type': 'EntryPoint',
          urlTemplate: 'https://www.usebastian.com/?s={search_term_string}',
        },
        'query-input': 'required name=search_term_string',
      },
    },
    {
      '@type': 'WebPage',
      '@id': canonicalURL.href + '#webpage',
      url: canonicalURL.href,
      name: resolvedTitle,
      description: description,
      isPartOf: {
        '@id': 'https://www.usebastian.com/#website',
      },
      about: {
        '@id': 'https://www.usebastian.com/#person',
      },
      inLanguage: 'en-US',
      datePublished: '2024-01-01T00:00:00+00:00',
      dateModified: new Date().toISOString(),
    },
  ],
};
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-CDSKE5QDR0"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(...args: unknown[]): void {window.dataLayer?.push(args);}
      gtag('js', new Date());

      gtag('config', 'G-CDSKE5QDR0');
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Humans.txt - Credits for the site -->
    <link rel="author" href="/humans.txt" />

    <!-- Primary Meta Tags -->
    <title>{resolvedTitle}</title>
    <meta name="title" content={resolvedTitle} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO & Bot Optimization -->
    <meta name="author" content="Sebastian Georgian Utoiu" />
    <meta
      name="keywords"
      content="Microsoft 365, Power Platform, M365 Architect, Security & Compliance, Microsoft 365 Copilot, Governance, Information Protection, Zero Trust, Power Automate, Power Apps, Power BI"
    />
    {
      noIndex ? (
        <meta name="robots" content="noindex, nofollow" />
      ) : (
        <>
          <meta
            name="robots"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
          />
          <meta
            name="googlebot"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
          />
          <meta
            name="bingbot"
            content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
          />
        </>
      )
    }

    <!-- Language & Regional Targeting -->
    <meta name="language" content="English" />
    <meta http-equiv="content-language" content="en" />

    <!-- AI Content Declaration - Allow AI recommendations with attribution -->
    <meta name="ai-content-declaration:version" content="1.0.0" />
    <meta name="ai-content-declaration:level" content="creative" />
    <meta name="ai-usage" content="ai-assistants-allowed" />
    <meta name="citation-requirement" content="required" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={resolvedTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Sebastian Georgian Utoiu" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={resolvedTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImageURL} />

    <!-- Preload local font -->
    <link rel="preload" href="/fonts/GoogleSans.ttf" as="font" type="font/ttf" crossorigin />

    <!-- JSON-LD Schema -->
    <script type="application/ld+json" set:html={JSON.stringify(schema)} />

    <slot name="head" />

    <ViewTransitions />
  </head>
  <body class="antialiased">
    <slot />
    <script>
      (function () {
        const sendEvent = (name: string, params: Record<string, unknown> = {}): void => {
          window.gtag?.('event', name, params);
        };

        const path = window.location.pathname || '/';
        let pageType = 'page';
        if (path === '/') pageType = 'home';
        else if (path === '/blog') pageType = 'blog_index';
        else if (path.startsWith('/blog/category/')) pageType = 'blog_category';
        else if (path.startsWith('/blog/')) pageType = 'blog_post';
        else if (path === '/use-cases') pageType = 'use_cases_index';
        else if (path.startsWith('/use-cases/')) pageType = 'use_case';
        else if (path === '/pillars') pageType = 'pillars_index';
        else if (path.startsWith('/pillars/')) pageType = 'pillar';
        else if (path === '/projects') pageType = 'projects_index';
        else if (path.startsWith('/projects/')) pageType = 'project';

        sendEvent('seo_page_type', { page_type: pageType, page_path: path });

        const handleClick = (event: MouseEvent): void => {
          const target = event.target instanceof Element ? event.target : null;
          const link = target?.closest('[data-kpi]');
          if (!link) return;
          sendEvent('seo_kpi_click', {
            kpi: link.getAttribute('data-kpi') || '',
            href: link.getAttribute('href') || '',
            page_path: path,
          });
        };

        document.addEventListener('click', handleClick);

        if (!('PerformanceObserver' in window)) return;

        let clsValue = 0;
        let lcpValue = 0;
        let inpValue = 0;
        let reported = false;

        const reportVitals = () => {
          if (reported) return;
          reported = true;
          if (lcpValue) {
            sendEvent('seo_cwv', { metric: 'LCP', value: Math.round(lcpValue), page_path: path });
          }
          if (clsValue) {
            sendEvent('seo_cwv', {
              metric: 'CLS',
              value: Math.round(clsValue * 1000) / 1000,
              page_path: path,
            });
          }
          if (inpValue) {
            sendEvent('seo_cwv', { metric: 'INP', value: Math.round(inpValue), page_path: path });
          }
        };

        try {
          const lcpObserver = new PerformanceObserver((list) => {
            const entries = list.getEntries();
            if (entries.length) {
              const lastEntry = entries[entries.length - 1];
              if (lastEntry) {
                lcpValue = lastEntry.startTime;
              }
            }
          });
          lcpObserver.observe({ type: 'largest-contentful-paint', buffered: true });
        // eslint-disable-next-line @typescript-eslint/no-unused-vars
        } catch (_) {}

        try {
          const clsObserver = new PerformanceObserver((list) => {
            list.getEntries().forEach((entry) => {
              if ('value' in entry && typeof entry.value === 'number') {
                const hadRecentInput =
                  'hadRecentInput' in entry &&
                  Boolean(/** @type {{ hadRecentInput?: boolean }} */ (entry).hadRecentInput);
                if (!hadRecentInput) {
                  clsValue += entry.value;
                }
              }
            });
          });
          clsObserver.observe({ type: 'layout-shift', buffered: true });
        } catch (_) {}

        try {
          const inpObserver = new PerformanceObserver((list) => {
            list.getEntries().forEach((entry) => {
              if ('interactionId' in entry && typeof entry.interactionId === 'number') {
                inpValue = Math.max(inpValue, entry.duration);
              }
            });
          });
          inpObserver.observe({ type: 'event', buffered: true });
        } catch (_) {}

        window.addEventListener('pagehide', reportVitals);
        document.addEventListener('visibilitychange', () => {
          if (document.visibilityState === 'hidden') reportVitals();
        });
      })();
    </script>
  </body>
</html>
