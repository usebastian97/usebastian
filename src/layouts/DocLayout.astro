---
import type { MarkdownHeading } from 'astro';
import MainLayout from '@layouts/MainLayout.astro';
import TableOfContents from '@components/mdx/TableOfContents.astro';

interface Props {
  title: string;
  description: string;
  headings: MarkdownHeading[];
  breadcrumb: {
    label: string;
    href: string;
  };
  backLink?: {
    label: string;
    href: string;
  };
  meta?: {
    label: string;
    value: string;
    icon?: string;
  }[];
  tags?: string[];
  image?: string | undefined;
  actions?: {
    label: string;
    href: string;
    variant?: 'primary' | 'secondary';
    icon?: 'external' | 'github';
  }[];
}

const { title, description, headings, breadcrumb, backLink, meta, tags, image, actions } = Astro.props;
---

<MainLayout title={`${title} | Sebastian Georgian Utoiu`} description={description}>
  <!-- Header with gradient background -->
  <div class="border-b border-gray-200 bg-gradient-to-b from-gray-50 to-white">
    <div class="container mx-auto px-4 py-8 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-[1fr_280px]">
        <div class="max-w-4xl">
          <!-- Breadcrumb -->
          <nav class="mb-6 flex items-center gap-2 text-sm">
            <a href="/" class="text-gray-500 hover:text-gray-700 transition-colors">Home</a>
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <a href={breadcrumb.href} class="text-gray-500 hover:text-gray-700 transition-colors">
              {breadcrumb.label}
            </a>
            <svg class="h-4 w-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-gray-900 font-medium truncate max-w-[200px]">{title}</span>
          </nav>

          <!-- Title & Description -->
          <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight text-gray-900 mb-4">
            {title}
          </h1>
          <p class="text-lg text-gray-600 leading-relaxed">{description}</p>

          <!-- Meta info -->
          {
            meta && meta.length > 0 && (
              <div class="mt-6 flex flex-wrap items-center gap-4 text-sm text-gray-500">
                {meta.map((item, index) => (
                  <>
                    {index > 0 && <span class="text-gray-300">â€¢</span>}
                    <span class="flex items-center gap-1.5">
                      {item.icon && <span>{item.icon}</span>}
                      <span class="text-gray-700">{item.value}</span>
                    </span>
                  </>
                ))}
              </div>
            )
          }

          <!-- Tags -->
          {
            tags && tags.length > 0 && (
              <div class="mt-6 flex flex-wrap gap-2">
                {tags.map((tag) => (
                  <span class="inline-flex items-center rounded-full bg-gray-100 px-3 py-1 text-sm font-medium text-gray-700 hover:bg-gray-200 transition-colors">
                    {tag}
                  </span>
                ))}
              </div>
            )
          }

          <!-- Action buttons -->
          {
            actions && actions.length > 0 && (
              <div class="mt-8 flex flex-wrap gap-3">
                {actions.map((action) => (
                  <a
                    href={action.href}
                    target={action.icon ? '_blank' : undefined}
                    rel={action.icon ? 'noopener noreferrer' : undefined}
                    class:list={[
                      'inline-flex items-center gap-2 rounded-lg px-5 py-2.5 font-medium transition-all',
                      action.variant === 'primary'
                        ? 'bg-gray-900 text-white hover:bg-gray-800 shadow-sm'
                        : 'border-2 border-gray-200 text-gray-700 hover:border-gray-900 hover:bg-gray-900 hover:text-white',
                    ]}
                  >
                    {action.icon === 'external' && (
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                      </svg>
                    )}
                    {action.icon === 'github' && (
                      <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
                      </svg>
                    )}
                    {action.label}
                  </a>
                ))}
              </div>
            )
          }
        </div>
        <!-- Empty column for alignment with sidebar -->
        <div class="hidden lg:block"></div>
      </div>
    </div>
  </div>

  <!-- Main content area -->
  <div class="bg-white">
    <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-[1fr_280px]">
        <!-- Article content -->
        <article class="min-w-0 max-w-4xl">
          {
            image && (
              <div class="mb-10 overflow-hidden rounded-2xl border border-gray-200">
                <img
                  src={image}
                  alt={title}
                  class="aspect-video w-full object-cover"
                  loading="eager"
                />
              </div>
            )
          }

          <!-- Slot for extra header content -->
          <slot name="header" />

          <!-- Main content with enhanced prose styles -->
          <div class="prose prose-base max-w-none
            prose-gray
            prose-p:leading-relaxed 
            prose-p:text-gray-600
            prose-a:text-blue-600 
            prose-a:font-medium 
            prose-a:no-underline 
            hover:prose-a:underline
            prose-strong:text-gray-900
            [&_h1]:!text-gray-900 [&_h1]:!font-medium [&_h1]:!no-underline
            [&_h2]:!text-gray-900 [&_h2]:!font-medium [&_h2]:!no-underline [&_h2]:scroll-mt-24 [&_h2]:mt-12 [&_h2]:mb-6 [&_h2]:text-2xl [&_h2]:border-b [&_h2]:border-gray-200 [&_h2]:pb-3
            [&_h3]:!text-gray-900 [&_h3]:!font-medium [&_h3]:!no-underline [&_h3]:scroll-mt-24 [&_h3]:mt-8 [&_h3]:mb-4 [&_h3]:text-xl
            [&_h4]:!text-gray-900 [&_h4]:!font-medium [&_h4]:!no-underline [&_h4]:scroll-mt-24 [&_h4]:mt-6 [&_h4]:mb-3 [&_h4]:text-lg
            [&_h1_a]:!text-gray-900 [&_h1_a]:!no-underline
            [&_h2_a]:!text-gray-900 [&_h2_a]:!no-underline
            [&_h3_a]:!text-gray-900 [&_h3_a]:!no-underline
            [&_h4_a]:!text-gray-900 [&_h4_a]:!no-underline"
            style="--tw-prose-headings: rgb(17, 24, 39); --tw-prose-links: rgb(17, 24, 39);"
            prose-code:rounded-md 
            prose-code:bg-gray-100 
            prose-code:px-1.5 
            prose-code:py-0.5 
            prose-code:text-sm 
            prose-code:font-medium 
            prose-code:text-gray-800
            prose-code:before:content-none 
            prose-code:after:content-none
            prose-pre:rounded-xl 
            prose-pre:bg-gray-900 
            prose-pre:shadow-lg
            prose-pre:border
            prose-pre:border-gray-800
            prose-ul:my-6 
            prose-ol:my-6
            prose-li:my-1 
            prose-li:text-gray-600
            prose-blockquote:border-l-4 
            prose-blockquote:border-blue-500 
            prose-blockquote:bg-blue-50 
            prose-blockquote:rounded-r-xl
            prose-blockquote:py-1
            prose-blockquote:pl-6
            prose-blockquote:pr-4
            prose-blockquote:not-italic
            prose-blockquote:text-gray-700
            prose-img:rounded-xl
            prose-hr:my-12
            prose-table:overflow-hidden
            prose-table:rounded-lg
            prose-table:border
            prose-table:border-gray-200
            prose-th:bg-gray-50
            prose-th:px-4
            prose-th:py-3
            prose-td:px-4
            prose-td:py-3
          ">
            <slot />
          </div>

          <!-- Slot for extra footer content -->
          <slot name="footer" />
        </article>

        <!-- Sidebar -->
        <aside class="hidden lg:block">
          <div class="sticky top-24 space-y-6">
            <!-- Table of Contents -->
            {
              headings.length > 0 && (
                <div class="rounded-xl border border-gray-200 bg-white p-5">
                  <TableOfContents headings={headings} />
                </div>
              )
            }

            <!-- Back link -->
            {
              backLink && (
                <a
                  href={backLink.href}
                  class="flex w-full items-center justify-center gap-2 rounded-xl border-2 border-gray-200 px-4 py-3 text-sm font-medium text-gray-700 transition-all hover:border-gray-900 hover:bg-gray-900 hover:text-white"
                >
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                  </svg>
                  {backLink.label}
                </a>
              )
            }

            <!-- Additional sidebar slot -->
            <slot name="sidebar" />
          </div>
        </aside>
      </div>
    </div>
  </div>
</MainLayout>
