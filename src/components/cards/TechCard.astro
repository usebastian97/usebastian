---
interface Props {
  name: string;
  category: string;
  icon?: string;
}

const { name, category, icon } = Astro.props;
---

<div
  class="group flex flex-col items-center gap-3 rounded-lg border border-gray-200 bg-white p-6 transition-all duration-300 hover:border-blue-600 hover:shadow-lg dark:border-gray-800 dark:bg-gray-900"
>
  {
    icon && (
      <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-blue-100 text-blue-600 transition-colors group-hover:bg-blue-600 group-hover:text-white dark:bg-blue-900/30">
        <span class="text-2xl">{icon}</span>
      </div>
    )
  }

  <h4 class="text-center font-semibold">{name}</h4>
  <span class="text-xs text-gray-600 dark:text-gray-400">{category}</span>
</div>
