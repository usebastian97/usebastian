---
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
  title?: string;
}

const { headings, title = 'On this page' } = Astro.props;
const filteredHeadings = headings.filter((h) => h.depth >= 2 && h.depth <= 3);
---

<nav class="toc-nav">
  <p class="mb-4 text-xs font-semibold tracking-wider text-gray-500 uppercase">{title}</p>
  <ul class="space-y-1">
    {
      filteredHeadings.map((heading) => (
        <li>
          <a
            href={`#${heading.slug}`}
            class:list={[
              'toc-link block py-1 text-sm transition-colors duration-150',
              heading.depth === 2 && 'font-medium text-gray-700 hover:text-gray-900',
              heading.depth === 3 && 'pl-4 text-gray-500 hover:text-gray-700',
            ]}
            data-heading-link
            data-heading-id={heading.slug}
          >
            {heading.text}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  .toc-link.active {
    color: #2563eb;
    font-weight: 500;
  }
  
  .toc-link.active::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 2px;
    height: 1.25rem;
    background: #2563eb;
    border-radius: 1px;
  }
  
  .toc-nav li {
    position: relative;
  }
</style>

<script>
  document.addEventListener('astro:page-load', () => {
    const tocLinks = document.querySelectorAll('[data-heading-link]');
    const headings = Array.from(tocLinks).map((link) => {
      const id = link.getAttribute('data-heading-id');
      return {
        link,
        element: document.getElementById(id || ''),
      };
    }).filter((item) => item.element);

    if (headings.length === 0) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            tocLinks.forEach((link) => {
              if (link.getAttribute('data-heading-id') === id) {
                link.classList.add('active');
              } else {
                link.classList.remove('active');
              }
            });
          }
        });
      },
      {
        rootMargin: '-80px 0px -80% 0px',
        threshold: 0,
      }
    );

    headings.forEach(({ element }) => {
      if (element) observer.observe(element);
    });
  });
</script>
