---
interface Props {
  items: { label: string; value: string }[];
  columns?: number;
}

const { items, columns = 2 } = Astro.props;
---

<div class="not-prose my-6">
  <div class={`grid gap-4 md:grid-cols-${columns}`}>
    {
      items.map((item) => (
        <div class="flex items-start gap-3 rounded-lg border border-gray-200 bg-white p-4">
          <svg
            class="mt-0.5 h-5 w-5 flex-shrink-0 text-green-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"
            />
          </svg>
          <div>
            <h5 class="font-semibold text-gray-900">{item.label}</h5>
            {item.value && (
              <p class="mt-1 text-sm text-gray-600">{item.value}</p>
            )}
          </div>
        </div>
      ))
    }
  </div>
</div>
