---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  width?: string;
}

const { src, alt, caption, width = '100%' } = Astro.props;
---

<figure class="not-prose my-8">
  <div class="overflow-hidden rounded-lg border border-gray-200 bg-white p-4">
    <img
      src={src}
      alt={alt}
      style={`width: ${width}; max-width: 100%;`}
      class="mx-auto"
    />
  </div>
  {
    caption && (
      <figcaption class="mt-3 text-center text-sm text-gray-600">
        {caption}
      </figcaption>
    )
  }
</figure>
