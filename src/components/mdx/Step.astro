---
interface Props {
  number: number;
  title?: string;
}

const { number, title } = Astro.props;
---

<li class="relative">
  <div class="absolute -left-9 flex h-6 w-6 items-center justify-center rounded-full bg-blue-600 text-xs font-bold text-white">
    {number}
  </div>
  <div>
    {title && <h5 class="mb-2 font-semibold text-gray-900">{title}</h5>}
    <div class="text-gray-700 leading-relaxed">
      <slot />
    </div>
  </div>
</li>
