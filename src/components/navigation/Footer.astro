---
import { useTranslations } from '@i18n/utils';
import { Icon } from 'astro-icon/components';

const t = useTranslations('en');
const currentYear = new Date().getFullYear();

const socialLinks = [
  { name: 'LinkedIn', url: 'https://linkedin.com/in/usebastian12', icon: 'simple-icons:linkedin' },
  { name: 'GitHub', url: 'https://github.com/usebastian97', icon: 'simple-icons:github' },
  { name: 'Substack', url: 'https://substack.com/@usebastian12', icon: 'simple-icons:substack' },
  { name: 'X (Twitter)', url: 'https://x.com/sutoiu12', icon: 'simple-icons:x' },
  { name: 'Instagram', url: 'https://instagram.com/usebastian12', icon: 'simple-icons:instagram' },
];
---

<footer class="border-t border-gray-200 bg-white">
  <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
      <!-- Brand -->
      <div>
        <div class="mb-4 flex items-center gap-3">
          <img src="/my-logo.svg" alt="SGU Logo" class="h-10 w-10" />
          <h3 class="text-lg font-bold">Sebastian Georgian Utoiu</h3>
        </div>
        <p class="text-sm text-gray-600">
          Cloud Architect specializing in Azure, AI solutions, and DevOps practices
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="mb-4 text-sm font-semibold tracking-wider uppercase">Quick Links</h4>
        <ul class="space-y-2 text-sm">
          <li>
            <a href="/about" class="text-sm font-bold text-black transition-colors hover:text-gray-600">
              {t('nav.about')}
            </a>
          </li>
          <li>
            <a href="/projects" class="text-sm font-bold text-black transition-colors hover:text-gray-600">
              {t('nav.projects')}
            </a>
          </li>
          <li>
            <a href="/blog" class="text-sm font-bold text-black transition-colors hover:text-gray-600">
              {t('nav.blog')}
            </a>
          </li>
          <li>
            <a href="/contact" class="text-sm font-bold text-black transition-colors hover:text-gray-600">
              {t('nav.contact')}
            </a>
          </li>
        </ul>
      </div>

      <!-- Social Links -->
      <div>
        <h4 class="mb-4 text-sm font-semibold tracking-wider uppercase">{t('footer.social')}</h4>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-900 transition-colors hover:text-black"
                aria-label={link.name}
              >
                <Icon name={link.icon} class="h-6 w-6" />
              </a>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-200 pt-8 text-center text-sm text-gray-600">
      <p>Â© {currentYear} Sebastian Georgian Utoiu. {t('footer.rights')}</p>
    </div>
  </div>
</footer>
