---
import { Icon } from 'astro-icon/components';
// Contact Information Component
---

<div id="contact-info" class="space-y-16">
  <!-- Direct Contact -->
  <div>
    <h2 class="mb-8">Direct Contact</h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Email -->
      <a
        href="mailto:usebastian12@protonmail.com"
        class="group rounded-2xl border border-gray-200 bg-white p-8 transition-all hover:border-black hover:shadow-lg"
      >
        <div
          class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-black text-white"
        >
          <Icon name="tabler:mail" class="h-7 w-7" />
        </div>
        <h3 class="mb-2 font-bold text-gray-900">Email</h3>
        <p class="text-sm text-gray-600 transition-colors group-hover:text-black">
          usebastian12@protonmail.com
        </p>
      </a>

      <!-- GitHub -->
      <a
        href="https://github.com/usebastian97"
        target="_blank"
        rel="noopener noreferrer"
        class="group rounded-2xl border border-gray-200 bg-white p-8 transition-all hover:border-black hover:shadow-lg"
      >
        <div
          class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-black text-white"
        >
          <Icon name="tabler:brand-github" class="h-7 w-7" />
        </div>
        <h3 class="mb-2 font-bold text-gray-900">GitHub</h3>
        <p class="text-sm text-gray-600 transition-colors group-hover:text-black">
          github.com/usebastian97
        </p>
      </a>

      <!-- LinkedIn -->
      <a
        href="https://www.linkedin.com/in/usebastian12/"
        target="_blank"
        rel="noopener noreferrer"
        class="group rounded-2xl border border-gray-200 bg-white p-8 transition-all hover:border-black hover:shadow-lg"
      >
        <div
          class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-black text-white"
        >
          <Icon name="tabler:brand-linkedin" class="h-7 w-7" />
        </div>
        <h3 class="mb-2 font-bold text-gray-900">LinkedIn</h3>
        <p class="text-sm text-gray-600 transition-colors group-hover:text-black">
          linkedin.com/in/usebastian12
        </p>
      </a>

      <!-- Substack -->
      <a
        href="https://substack.com/@usebastian12"
        target="_blank"
        rel="noopener noreferrer"
        class="group rounded-2xl border border-gray-200 bg-white p-8 transition-all hover:border-black hover:shadow-lg"
      >
        <div
          class="mb-4 inline-flex h-14 w-14 items-center justify-center rounded-xl bg-black text-white"
        >
          <Icon name="simple-icons:substack" class="h-7 w-7" />
        </div>
        <h3 class="mb-2 font-bold text-gray-900">Substack</h3>
        <p class="text-sm text-gray-600 transition-colors group-hover:text-black">@usebastian12</p>
      </a>
    </div>
  </div>

  <!-- Availability & Expertise Row -->
  <div class="grid gap-8 lg:grid-cols-2">
    <!-- Availability -->
    <div class="rounded-2xl border border-gray-200 bg-gradient-to-br from-gray-50 to-white p-10">
      <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl bg-green-100">
        <Icon name="tabler:clock" class="h-6 w-6 text-green-700" />
      </div>
      <h3 class="mb-4 text-xl font-bold text-gray-900">Response Time</h3>
      <p class="leading-relaxed text-gray-600">
        I'm available for consulting, speaking engagements, and select project work. Typical
        response time is within <span class="font-semibold text-gray-900">2-4 hours</span>.
      </p>
    </div>
  </div>
</div>
