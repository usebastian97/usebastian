---
import { certifications, statusColors, categoryColors } from '@/data/certifications';
---


<div class="mb-12">
  <!-- Filter Buttons -->
  <div class="mb-8 flex flex-wrap justify-start gap-3">
    <button
      data-filter="all"
      class="filter-btn active rounded border-2 border-gray-900 px-6 py-2 text-sm font-medium text-gray-900 transition-all hover:bg-gray-900 hover:text-white"
    >
      All
    </button>
    <button
      data-filter="Completed"
      class="filter-btn rounded border-2 border-green-600 px-6 py-2 text-sm font-medium text-green-600 transition-all hover:bg-green-600 hover:text-white"
    >
      Completed
    </button>
    <button
      data-filter="In Progress"
      class="filter-btn rounded border-2 border-blue-600 px-6 py-2 text-sm font-medium text-blue-600 transition-all hover:bg-blue-600 hover:text-white"
    >
      In Progress
    </button>
    <button
      data-filter="Next"
      class="filter-btn rounded border-2 border-yellow-600 px-6 py-2 text-sm font-medium text-yellow-600 transition-all hover:bg-yellow-600 hover:text-white"
    >
      Next
    </button>
    <button
      data-filter="Planned"
      class="filter-btn rounded border-2 border-gray-400 px-6 py-2 text-sm font-medium text-gray-600 transition-all hover:bg-gray-400 hover:text-white"
    >
      Planned
    </button>
  </div>

  <!-- Certifications Grid -->
  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3" id="certifications-grid">
    {certifications.map((cert) => (
      <div class={`cert-card group flex flex-col rounded-lg border-4 ${categoryColors[cert.category]} bg-white p-6 shadow-sm transition-all duration-200 hover:shadow-lg`} data-status={cert.status}>
        <!-- Provider & Status -->
        <div class="mb-4 flex items-center justify-between">
          <div class="flex items-center gap-2">
            {cert.provider === 'Microsoft' && (
              <img src="/stack-icons/microsoft.svg" alt="Microsoft" class="h-5 w-5" />
            )}
            <span class="text-sm font-semibold text-gray-900">{cert.provider}</span>
            {cert.status === 'Completed' && (
              <img src="/stack-icons/verified-badge.svg" alt="Verified" class="h-6 w-6" loading="lazy" />
            )}
          </div>
          <span class={`rounded-full px-3 py-1 text-xs font-semibold ${statusColors[cert.status]}`}>
            {cert.status}
          </span>
        </div>

        <!-- Badge -->
        <div class="mb-3">
          <span class="inline-block rounded-md bg-gray-100 px-3 py-1.5 text-sm font-bold text-gray-900">
            {cert.badge}
          </span>
        </div>

        <!-- Title -->
        <h3 class="mb-3 text-lg font-bold text-gray-900">
          {cert.title}
        </h3>

        <!-- Description -->
        <p class="mb-4 flex-grow text-sm leading-relaxed text-gray-600">
          {cert.description}
        </p>

        <!-- Date & Category -->
        <div class="mt-auto flex items-center justify-between border-t border-gray-200 pt-4">
          <span class="text-xs font-medium text-gray-500">{cert.category}</span>
          <span class="text-xs font-medium text-gray-500">{cert.date}</span>
        </div>

        <!-- Credential Link -->
        {cert.credentialUrl && (
          <div class="mt-3 pt-3 border-t border-gray-200">
            <a
              href={cert.credentialUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 text-xs font-medium text-blue-600 hover:text-blue-700"
            >
              View Credential
              <svg class="h-3 w-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        )}
      </div>
    ))}
  </div>
</div>

<script>
  function initCertificationsFilter() {
    const filterButtons = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLButtonElement>;
    const cards = document.querySelectorAll('.cert-card') as NodeListOf<HTMLElement>;

    filterButtons.forEach((button) => {
      button.addEventListener('click', () => {
        // Update active button
        filterButtons.forEach((btn) => btn.classList.remove('active'));
        button.classList.add('active');

        const filterValue = button.getAttribute('data-filter');

        // Filter cards
        cards.forEach((card) => {
          if (filterValue === 'all') {
            card.style.display = 'flex';
          } else {
            const cardStatus = card.getAttribute('data-status');
            card.style.display = cardStatus === filterValue ? 'flex' : 'none';
          }
        });
      });
    });
  }

  // Initialize on page load (guard for SSR)
  if (typeof document !== 'undefined') {
    initCertificationsFilter();
    // Reinitialize after view transitions
    document.addEventListener('astro:page-load', initCertificationsFilter);
  }
</script>
