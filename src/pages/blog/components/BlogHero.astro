---
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<div class="mb-12 grid items-center gap-4 md:grid-cols-2 lg:gap-6">
  <div>
    <h1
      class="mb-6 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl"
    >
      {t('blog.title')}
    </h1>
    <p class="text-lg leading-relaxed text-gray-600">
      Documenting my work, my learning path and the ideas shaping cloud technology, turning complex
      topics into practical insights that help others build with confidence.
    </p>
  </div>
  <div class="flex justify-center md:justify-center">
    <img
      src="/home/learn-cloud-girls.png"
      alt="Learn Cloud Girls"
      class="h-auto w-80 sm:w-80"
      loading="lazy"
    />
  </div>
</div>
