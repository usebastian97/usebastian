---
import MainLayout from '@layouts/MainLayout.astro';
import ContactHero from './contact/components/ContactHero.astro';
import ContactForm from './contact/components/ContactForm.astro';
import ContactInfo from './contact/components/ContactInfo.astro';
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<MainLayout title={`${t('contact.title')} | Sebastian Georgian Utoiu`}>
  <section class="relative overflow-hidden bg-white py-20 lg:py-28">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <ContactHero />

      <div class="mt-16 grid gap-12 lg:grid-cols-2 lg:gap-16">
        <ContactInfo />
        <div class="rounded-2xl border-4 border-gray-200 bg-white p-8 shadow-xl shadow-gray-100/50 lg:p-10">
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</MainLayout>
