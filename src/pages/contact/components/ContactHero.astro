---
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<div class="mx-auto max-w-2xl text-center">
  <img src="/contact/contact-face.webp" alt="Stack" class="mx-auto mb-2 h-auto w-28 sm:w-48" loading="lazy" />
  <h1 class="mb-3 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">
    {t('contact.title')}
  </h1>
  <p class="mx-auto mb-8 max-w-2xl text-lg leading-relaxed text-gray-600 sm:text-xl">
    Interested in collaborating? Let's discuss your cloud infrastructure, AI solutions, or
    DevOps needs. I'm always open to new opportunities and challenges.
  </p>
  <div class="flex justify-center">
    <img
      src="/home/arrow-1.png"
      alt="Arrow pointing down"
      class="h-auto w-16 sm:w-20"
    />
  </div>
</div>
