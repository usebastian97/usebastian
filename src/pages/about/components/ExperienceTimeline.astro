---
// Experience Timeline Component

const experience = [
  {
    title: 'Senior Cloud Architect',
    company: 'Global Tech Corporation',
    period: '2021 - Present',
    description:
      'Leading cloud transformation initiatives for Fortune 500 clients. Designed and implemented enterprise-scale Azure architectures supporting millions of users.',
  },
  {
    title: 'DevOps Lead',
    company: 'Innovation Labs',
    period: '2019 - 2021',
    description:
      'Built and managed CI/CD infrastructure for 50+ development teams. Implemented GitOps practices and automated deployment pipelines.',
  },
  {
    title: 'Cloud Engineer',
    company: 'Digital Solutions Inc',
    period: '2017 - 2019',
    description:
      'Migrated legacy applications to Azure. Developed infrastructure automation tools and implemented monitoring solutions.',
  },
];
---

<div class="mb-16">
  <h2 class="mb-8 text-3xl font-bold">Professional Experience</h2>
  <div class="space-y-8">
    {
      experience.map((job, index) => (
        <div class="relative pl-8 before:absolute before:left-0 before:top-2 before:h-4 before:w-4 before:rounded-full before:bg-blue-600 before:ring-4 before:ring-blue-100 dark:before:ring-blue-900">
          {index !== experience.length - 1 && (
            <div class="absolute left-2 top-6 h-full w-0.5 bg-gray-200 dark:bg-gray-800" />
          )}
          <div>
            <h3 class="text-xl font-bold">{job.title}</h3>
            <p class="mt-1 text-blue-600">{job.company}</p>
            <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">{job.period}</p>
            <p class="mt-3 text-gray-600 dark:text-gray-400">{job.description}</p>
          </div>
        </div>
      ))
    }
  </div>
</div>
