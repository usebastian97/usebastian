---
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<div class="mb-12 grid items-center gap-8 md:grid-cols-2 lg:gap-12">
  <div>
    <h1 class="mb-6 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">
      {t('projects.title')}
    </h1>
    <p class="text-xl leading-relaxed text-gray-600">
      A curated set of initiatives across Microsoft 365, Power Platform, and Copilot governance
      with security and compliance at the core.
    </p>
  </div>
  <div class="flex justify-center md:justify-end">
    <img src="/home/glossary.png" alt="Projects" class="h-auto w-80 sm:w-80" loading="lazy" />
  </div>
</div>
