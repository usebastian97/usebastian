---
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<div class="mb-12 grid items-center gap-8 md:grid-cols-2 lg:gap-12">
  <div>
    <h1 class="mb-8">
      {t('usecases.title')}
    </h1>
    <p class="text-lg leading-relaxed text-gray-600">
      {t('usecases.description')}
    </p>
    <div class="mt-6 flex items-center gap-3 overflow-x-auto sm:gap-4">
      <img
        src="/m365/Microsoft-Entra-ID.svg"
        alt="Microsoft Entra ID"
        class="h-8 w-8"
        loading="lazy"
      />
      <img src="/m365/teams.svg" alt="Microsoft Teams" class="h-8 w-8" loading="lazy" />
      <img src="/m365/SharePoint.svg" alt="SharePoint" class="h-8 w-8" loading="lazy" />
      <img src="/m365/OneDrive.svg" alt="OneDrive" class="h-8 w-8" loading="lazy" />
      <img src="/m365/outlook.svg" alt="Exchange Online" class="h-8 w-8" loading="lazy" />
      <img src="/m365/power-apps.svg" alt="Power Apps" class="h-8 w-8" loading="lazy" />
      <img src="/m365/power-automate.svg" alt="Power Automate" class="h-8 w-8" loading="lazy" />
      <img src="/m365/power-bi.svg" alt="Power BI" class="h-8 w-8" loading="lazy" />
      <img src="/m365/purview.svg" alt="Microsoft Purview" class="h-8 w-8" loading="lazy" />
      <img src="/m365/copilot.svg" alt="Microsoft 365 Copilot" class="h-8 w-8" loading="lazy" />
    </div>
  </div>
  <div class="flex justify-center md:justify-end">
    <img src="/home/glossary.png" alt="Stack" class="h-auto w-80 sm:w-80" loading="lazy" />
  </div>
</div>
