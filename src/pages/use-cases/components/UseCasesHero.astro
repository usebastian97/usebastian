---
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<div class="mb-12 grid items-center gap-8 md:grid-cols-2 lg:gap-12">
  <div>
    <h1 class="mb-8 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">
      {t('usecases.title')}
    </h1>
    <p class="text-lg leading-relaxed text-gray-600">
      {t('usecases.description')}
    </p>
  </div>
  <div class="flex justify-center md:justify-end">
    <img src="/home/glossary.png" alt="Stack" class="h-auto w-80 sm:w-80" loading="lazy" />
  </div>
</div>
