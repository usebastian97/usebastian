---
import { useTranslations, type Language } from '@i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<div class="mb-12 text-center">
  <h1 class="mb-6 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl lg:text-6xl">
    {t('usecases.title')}
  </h1>
  <p class="mx-auto max-w-3xl text-xl leading-relaxed text-gray-600">
    {t('usecases.description')}
  </p>
</div>
