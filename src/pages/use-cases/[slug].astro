---
import { getCollection } from 'astro:content';
import MainLayout from '@layouts/MainLayout.astro';

export async function getStaticPaths() {
  const useCaseEntries = await getCollection('use-cases');
  return useCaseEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();
---

<MainLayout
  title={`${entry.data.title} | Sebastian Georgian Utoiu`}
  description={entry.data.description}
  lang={entry.data.lang}
>
  <!-- Breadcrumb -->
  <nav class="border-b border-gray-200 bg-white">
    <div class="container mx-auto px-4 py-4 sm:px-6 lg:px-8">
      <div class="flex items-center gap-2 text-sm text-gray-600">
        <a href="/" class="hover:text-gray-900">Home</a>
        <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900">Use Cases</span>
      </div>
    </div>
  </nav>

  <div class="bg-white">
    <div class="container mx-auto px-4 py-12 sm:px-6 lg:px-8">
      <div class="mx-auto grid max-w-7xl grid-cols-1 gap-12 lg:grid-cols-[1fr_300px]">
        <!-- Main Content -->
        <article class="min-w-0 scroll-mt-24">
          <!-- Header -->
          <header class="mb-10">
            <div class="mb-4">
              <span class="inline-block rounded-full bg-gray-100 px-3 py-1 text-xs font-semibold uppercase tracking-wide text-gray-800">
                {entry.data.category}
              </span>
            </div>

            <h1 class="mb-4 text-2xl font-bold leading-tight tracking-tight text-gray-900 sm:text-3xl md:text-4xl lg:text-5xl">
              {entry.data.title}
            </h1>
            
            <p class="mx-start max-w-3xl text-lg leading-8 text-gray-600">
              {entry.data.description}
            </p>
          </header>

          <!-- Hero Image -->
          {
            entry.data.image && (
              <div class="mb-10">
                <img
                  src={entry.data.image}
                  alt={entry.data.title}
                  class="aspect-video w-full rounded-xl object-cover shadow-sm"
                />
              </div>
            )
          }

          <!-- Problem, Solution, Result Summary -->
          <div class="mb-10 grid gap-6 md:grid-cols-3">
            <div class="rounded-lg border border-gray-200 bg-gray-50 p-5">
              <h2 class="mb-2 text-sm font-semibold uppercase tracking-wider text-gray-500">Challenge</h2>
              <p class="text-sm leading-relaxed text-gray-700">{entry.data.problem}</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-gray-50 p-5">
              <h2 class="mb-2 text-sm font-semibold uppercase tracking-wider text-gray-500">Solution</h2>
              <p class="text-sm leading-relaxed text-gray-700">{entry.data.solution}</p>
            </div>
            <div class="rounded-lg border border-gray-200 bg-gray-50 p-5">
              <h2 class="mb-2 text-sm font-semibold uppercase tracking-wider text-gray-500">Outcome</h2>
              <p class="text-sm leading-relaxed text-gray-700">{entry.data.result}</p>
            </div>
          </div>

          <!-- Content -->
          <div
            class="prose prose-lg prose-gray mx-auto max-w-[70ch] prose-headings:scroll-mt-24 prose-headings:font-bold prose-headings:tracking-tight prose-h2:mb-6 prose-h2:mt-12 prose-h2:text-3xl prose-h3:mb-4 prose-h3:mt-10 prose-h3:text-xl prose-p:mb-8 prose-p:leading-[1.75] prose-p:tracking-wide prose-p:text-gray-700 prose-a:font-medium prose-a:text-gray-900 prose-a:no-underline prose-strong:font-semibold prose-strong:text-gray-900 prose-ul:my-6 prose-li:my-2 prose-li:leading-7 prose-code:rounded prose-code:bg-gray-100 prose-code:px-1.5 prose-code:py-0.5 prose-code:text-sm prose-code:font-medium prose-code:text-gray-900 prose-code:before:content-none prose-code:after:content-none prose-pre:rounded-lg prose-pre:bg-gray-900 prose-pre:shadow-lg"
          >
            <Content />
          </div>

          <!-- Technologies -->
          {
            entry.data.technologies.length > 0 && (
              <div class="mt-10 rounded-lg border border-gray-200 bg-gray-50 p-6">
                <h2 class="mb-4 text-lg font-semibold text-gray-900">
                  Technologies Used
                </h2>
                <div class="flex flex-wrap gap-2">
                  {entry.data.technologies.map((tech) => (
                    <span class="rounded-md bg-white px-3 py-1.5 text-sm font-medium text-gray-800 shadow-sm">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            )
          }

          <!-- Related Projects -->
          {
            entry.data.relatedProjects.length > 0 && (
              <div class="mt-10 border-t border-gray-200 pt-10">
                <h2 class="mb-6 text-2xl font-bold text-gray-900">Related Projects</h2>
                <div class="flex flex-wrap gap-3">
                  {entry.data.relatedProjects.map((project) => (
                    <a
                      href={`/projects/${project}`}
                      class="inline-flex items-center gap-2 rounded-lg border-2 border-gray-200 px-4 py-2 text-sm font-medium text-gray-700 transition-all hover:border-gray-900 hover:bg-gray-900 hover:text-white"
                    >
                      {project.split('-').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ')}
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
            )
          }
        </article>

        <!-- Sidebar - Table of Contents -->
        <aside class="hidden lg:block">
          <div class="sticky top-24">
            <div class="rounded-lg border border-gray-200 bg-white p-6">
              <h2 class="mb-4 text-sm font-semibold uppercase tracking-wider text-gray-900">
                On this page
              </h2>
              <nav class="space-y-2">
                {
                  headings
                    .filter((heading) => heading.depth < 4)
                    .map((heading) => (
                      <a
                        href={`#${heading.slug}`}
                        class={`block text-sm leading-relaxed transition-colors hover:text-gray-900 ${
                          heading.depth === 2 ? 'pl-0 font-medium text-gray-900' : ''
                        } ${heading.depth === 3 ? 'pl-4 text-gray-600' : ''}`}
                      >
                        {heading.text}
                      </a>
                    ))
                }
              </nav>
            </div>

            <!-- Back to Home -->
            <div class="mt-6">
              <a
                href="/"
                class="inline-flex w-full items-center justify-center gap-2 rounded-lg border-2 border-gray-200 px-4 py-3 text-sm font-medium text-gray-700 transition-all hover:border-gray-900 hover:bg-gray-900 hover:text-white"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Home
              </a>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </div>
</MainLayout>
