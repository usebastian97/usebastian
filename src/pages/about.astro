---
import MainLayout from '@layouts/MainLayout.astro';
import AboutHero from '@components/pages/about/AboutHero.astro';
import ProfessionalSummary from '@components/pages/about/ProfessionalSummary.astro';
import ExperienceTimeline from '@components/pages/about/ExperienceTimeline.astro';
import EducationTimeline from '@components/pages/about/EducationTimeline.astro';
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<MainLayout
  title="About M365 & Copilot Architect | Sebastian Georgian Utoiu"
  description="Learn about Sebastian Georgian Utoiu, an M365 & Power Platform Architect focused on security, compliance, and Microsoft 365 Copilot adoption and governance."
>
  <AboutHero />

  <!-- Main Content -->
  <section class="bg-white py-16">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <ProfessionalSummary />
      <ExperienceTimeline />
      <EducationTimeline />
    </div>
  </section>
</MainLayout>
