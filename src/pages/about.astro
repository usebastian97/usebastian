---
import MainLayout from '@layouts/MainLayout.astro';
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');

const skills = [
  {
    category: 'Cloud Platforms',
    items: ['Microsoft Azure', 'Azure DevOps', 'Azure AI Services', 'Azure Kubernetes Service'],
  },
  {
    category: 'Infrastructure as Code',
    items: ['Terraform', 'Bicep', 'ARM Templates', 'Pulumi'],
  },
  {
    category: 'Container Technologies',
    items: ['Kubernetes', 'Docker', 'Helm', 'ArgoCD', 'Harbor'],
  },
  {
    category: 'Programming',
    items: ['Python', 'TypeScript', 'Go', 'PowerShell', 'Bash'],
  },
  {
    category: 'AI & Machine Learning',
    items: ['Azure OpenAI', 'TensorFlow', 'PyTorch', 'Scikit-learn', 'LangChain'],
  },
  {
    category: 'DevOps & Automation',
    items: ['CI/CD Pipelines', 'GitOps', 'Ansible', 'Jenkins', 'GitHub Actions'],
  },
  {
    category: 'Security',
    items: ['Zero Trust Architecture', 'Azure AD', 'Key Vault', 'Defender for Cloud'],
  },
  {
    category: 'Monitoring & Observability',
    items: ['Azure Monitor', 'Prometheus', 'Grafana', 'ELK Stack', 'Application Insights'],
  },
];

const experience = [
  {
    title: 'Senior Cloud Architect',
    company: 'Global Tech Corporation',
    period: '2021 - Present',
    description:
      'Leading cloud transformation initiatives for Fortune 500 clients. Designed and implemented enterprise-scale Azure architectures supporting millions of users.',
  },
  {
    title: 'DevOps Lead',
    company: 'Innovation Labs',
    period: '2019 - 2021',
    description:
      'Built and managed CI/CD infrastructure for 50+ development teams. Implemented GitOps practices and automated deployment pipelines.',
  },
  {
    title: 'Cloud Engineer',
    company: 'Digital Solutions Inc',
    period: '2017 - 2019',
    description:
      'Migrated legacy applications to Azure. Developed infrastructure automation tools and implemented monitoring solutions.',
  },
];
---

<MainLayout title={`${t('about.title')} | Sebastian Georgian Utoiu`}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-white to-gray-50 py-20 dark:from-black dark:to-gray-900">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <h1 class="mb-6 text-4xl font-bold tracking-tight sm:text-5xl">{t('about.title')}</h1>
      <p class="text-xl leading-relaxed text-gray-600 dark:text-gray-400">
        {t('about.bio')}
      </p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="bg-white py-16 dark:bg-black">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <!-- Professional Summary -->
      <div class="mb-16">
        <h2 class="mb-6 text-3xl font-bold">Professional Summary</h2>
        <div class="space-y-4 text-gray-600 dark:text-gray-400">
          <p>
            I'm a Cloud Architect with 7+ years of experience designing and implementing
            enterprise-scale solutions on Microsoft Azure. My expertise spans cloud infrastructure,
            DevOps practices, artificial intelligence, and security architecture.
          </p>
          <p>
            Throughout my career, I've successfully led digital transformation initiatives for
            organizations ranging from startups to Fortune 500 companies. I'm passionate about
            leveraging cutting-edge technologies to solve complex business challenges and drive
            innovation.
          </p>
          <p>
            My approach combines deep technical expertise with strategic thinking, ensuring that
            solutions are not only technically sound but also aligned with business objectives and
            scalable for future growth.
          </p>
        </div>
      </div>

      <!-- Skills Section -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold">{t('about.skills')}</h2>
        <div class="grid gap-8 sm:grid-cols-2">
          {
            skills.map((skillGroup) => (
              <div class="rounded-lg border border-gray-200 bg-gray-50 p-6 dark:border-gray-800 dark:bg-gray-900">
                <h3 class="mb-4 text-lg font-semibold">{skillGroup.category}</h3>
                <ul class="space-y-2">
                  {skillGroup.items.map((skill) => (
                    <li class="flex items-center text-gray-600 dark:text-gray-400">
                      <svg
                        class="mr-2 h-5 w-5 text-blue-600"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M5 13l4 4L19 7"
                        />
                      </svg>
                      {skill}
                    </li>
                  ))}
                </ul>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Experience Timeline -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold">Professional Experience</h2>
        <div class="space-y-8">
          {
            experience.map((job, index) => (
              <div class="relative pl-8 before:absolute before:left-0 before:top-2 before:h-4 before:w-4 before:rounded-full before:bg-blue-600 before:ring-4 before:ring-blue-100 dark:before:ring-blue-900">
                {index !== experience.length - 1 && (
                  <div class="absolute left-2 top-6 h-full w-0.5 bg-gray-200 dark:bg-gray-800" />
                )}
                <div>
                  <h3 class="text-xl font-bold">{job.title}</h3>
                  <p class="mt-1 text-blue-600">{job.company}</p>
                  <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">{job.period}</p>
                  <p class="mt-3 text-gray-600 dark:text-gray-400">{job.description}</p>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Certifications -->
      <div class="mb-16">
        <h2 class="mb-8 text-3xl font-bold">Certifications</h2>
        <div class="grid gap-4 sm:grid-cols-2">
          <div class="rounded-lg border border-gray-200 p-4 dark:border-gray-800">
            <p class="font-semibold">Microsoft Certified: Azure Solutions Architect Expert</p>
          </div>
          <div class="rounded-lg border border-gray-200 p-4 dark:border-gray-800">
            <p class="font-semibold">Microsoft Certified: DevOps Engineer Expert</p>
          </div>
          <div class="rounded-lg border border-gray-200 p-4 dark:border-gray-800">
            <p class="font-semibold">Microsoft Certified: Azure Security Engineer Associate</p>
          </div>
          <div class="rounded-lg border border-gray-200 p-4 dark:border-gray-800">
            <p class="font-semibold">Certified Kubernetes Administrator (CKA)</p>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <a
          href="/cv.pdf"
          download
          class="inline-flex items-center gap-2 rounded-lg bg-blue-600 px-6 py-3 font-medium text-white transition-colors hover:bg-blue-700"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
            ></path>
          </svg>
          {t('about.download_cv')}
        </a>
      </div>
    </div>
  </section>
</MainLayout>
