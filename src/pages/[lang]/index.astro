---
import MainLayout from '@layouts/MainLayout.astro';
import HeroSection from '../home/components/HeroSection.astro';
import FeaturedProjects from '../home/components/FeaturedProjects.astro';
import StackSection from '../home/components/StackSection.astro';
import LatestBlogPosts from '../home/components/LatestBlogPosts.astro';
import CTASection from '../home/components/CTASection.astro';
import { languages, type Language } from '@i18n/utils';

export function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Language };
---

<MainLayout lang={lang}>
  <HeroSection lang={lang} />
  <FeaturedProjects lang={lang} />
  <StackSection lang={lang} />
  <LatestBlogPosts lang={lang} />
  <CTASection lang={lang} />
</MainLayout>
