<section class="relative overflow-hidden border-b border-gray-200 bg-white py-10 sm:py-10 lg:py-10">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <img
        src="/stacks/stack-face.png"
        alt="Stack"
        class="mx-auto mb-6 h-auto w-24 sm:w-24"
        loading="lazy"
      />
      <h2 class="text-notion-text-primary mb-3 text-3xl font-semibold tracking-tight sm:text-4xl">
        Technology Stack
      </h2>
      <p class="text-notion-text-secondary mx-auto max-w-2xl">
        I work with a focused set of tools and technologies that allow me to deliver modern,
        resilient and scalable solutions.
      </p>
    </div>

    <!-- Tabs -->
    <div class="mx-auto max-w-7xl">
      <!-- Tab Navigation -->
      <div class="mb-8 flex flex-wrap justify-center gap-2 border-b border-gray-200 pb-4">
        {
          techTabs.map((tab, index) => (
            <button
              class="tech-tab rounded-lg px-4 py-2 text-sm font-medium transition-all sm:px-6 sm:text-base"
              data-tab={tab.id}
              data-active={index === 0 ? 'true' : 'false'}
            >
              {tab.name}
            </button>
          ))
        }
      </div>

      <!-- Tab Content -->
      {
        techTabs.map((tab, index) => (
          <div
            class="tab-content"
            data-tab-content={tab.id}
            style={index === 0 ? '' : 'display: none;'}
          >
            <div class="grid grid-cols-3 gap-3 sm:gap-4 md:grid-cols-4 lg:grid-cols-6">
              {tab.technologies.map((tech) => (
                <div class="tech-card group flex flex-col items-center justify-center gap-2 p-4 sm:p-5">
                  <div class="flex h-12 w-12 items-center justify-center sm:h-14 sm:w-14">
                    {tech.icon.startsWith('/') || tech.icon.startsWith('./') ? (
                      <img src={tech.icon} alt={tech.name} class="h-10 w-10 sm:h-12 sm:w-12" />
                    ) : (
                      <Icon name={tech.icon} class="h-10 w-10 sm:h-12 sm:w-12" />
                    )}
                  </div>
                  <h3 class="text-center text-xs font-medium tracking-tight text-gray-900 sm:text-sm">
                    {tech.name}
                  </h3>
                  <span class={`skill-level skill-level-${tech.level.toLowerCase()}`}>
                    {tech.level}
                  </span>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<script>
  function initTabs() {
    const tabButtons = document.querySelectorAll('.tech-tab');
    const tabContents = document.querySelectorAll('.tab-content');

    tabButtons.forEach((button) => {
      // Set initial active state
      const isActive = button.getAttribute('data-active') === 'true';
      if (isActive) {
        button.classList.add('bg-black', 'text-white');
        button.classList.remove('bg-gray-100', 'text-gray-700');
      } else {
        button.classList.add('bg-gray-100', 'text-gray-700');
        button.classList.remove('bg-black', 'text-white');
      }

      button.addEventListener('click', () => {
        const targetTab = button.getAttribute('data-tab');

        // Update button states
        tabButtons.forEach((btn) => {
          btn.classList.remove('bg-black', 'text-white');
          btn.classList.add('bg-gray-100', 'text-gray-700');
          btn.setAttribute('data-active', 'false');
        });

        button.classList.remove('bg-gray-100', 'text-gray-700');
        button.classList.add('bg-black', 'text-white');
        button.setAttribute('data-active', 'true');

        // Update content visibility
        tabContents.forEach((content) => {
          const contentTab = content.getAttribute('data-tab-content');
          if (contentTab === targetTab) {
            (content as HTMLElement).style.display = 'block';
          } else {
            (content as HTMLElement).style.display = 'none';
          }
        });
      });
    });
  }

  // Initialize on page load
  initTabs();

  // Reinitialize after view transitions
  document.addEventListener('astro:page-load', initTabs);
</script>

<style>
  /* Notion-specific color palette */
  :root {
    --notion-bg: #fafafa;
    --notion-card-bg: #ffffff;
    --notion-border: #ededed;
    --notion-text-primary: #1a1a1a;
    --notion-text-secondary: #555555;
  }

  .bg-notion-bg {
    background-color: var(--notion-bg);
  }

  .text-notion-text-primary {
    color: var(--notion-text-primary);
  }

  .text-notion-text-secondary {
