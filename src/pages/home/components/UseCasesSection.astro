---
import { useTranslations, type Language } from '@i18n/utils';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = useTranslations(lang);

// Pre-fetch all translations at the component level
const useCasesData = [
  {
    id: 'enterprise-scale',
    icon: 'simple-icons:microsoftazure',
    titleKey: 'home.usecases.enterprise-scale.problem',
    problemKey: 'home.usecases.enterprise-scale.problem',
    solutionKey: 'home.usecases.enterprise-scale.solution',
    resultKey: 'home.usecases.enterprise-scale.result',
    projects: ['enterprise-azure-landing-zone'],
  },
  {
    id: 'ai-ops',
    icon: 'simple-icons:openai',
    titleKey: 'home.usecases.ai-ops.problem',
    problemKey: 'home.usecases.ai-ops.problem',
    solutionKey: 'home.usecases.ai-ops.solution',
    resultKey: 'home.usecases.ai-ops.result',
    projects: ['ai-powered-devops-automation', 'ai-log-analysis-platform'],
  },
  {
    id: 'cloud-native',
    icon: 'simple-icons:kubernetes',
    titleKey: 'home.usecases.cloud-native.problem',
    problemKey: 'home.usecases.cloud-native.problem',
    solutionKey: 'home.usecases.cloud-native.solution',
    resultKey: 'home.usecases.cloud-native.result',
    projects: ['cloud-native-cicd-platform'],
  },
];
---

<section class="relative overflow-hidden border-b border-gray-200 bg-gray-50 py-12 sm:py-16 lg:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="mb-12 text-center">
      <h2 class="mb-3 text-3xl font-semibold tracking-tight text-gray-900 sm:text-4xl">
        {t('home.usecases.title')}
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        {t('home.usecases.description')}
      </p>
    </div>

    <!-- Use Cases Grid -->
    <div class="mx-auto max-w-7xl">
      <div class="grid gap-8 md:grid-cols-1 lg:grid-cols-3">
        {useCasesData.map((useCase) => (
          <div class="usecase-card group rounded-lg border border-gray-200 bg-white p-6 sm:p-8 transition-all duration-200 hover:border-gray-900 hover:shadow-lg">
            <!-- Icon -->
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-lg bg-gray-100 group-hover:bg-gray-900 transition-colors">
              <svg class="h-6 w-6 text-gray-700 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>

            <!-- Problem -->
            <div class="mb-6 pb-6 border-b border-gray-200">
              <h3 class="mb-2 text-xs font-semibold uppercase tracking-widest text-gray-500">
                {t('home.usecases.problem')}
              </h3>
              <p class="text-sm text-gray-700 leading-relaxed">
                {t(useCase.problemKey)}
              </p>
            </div>

            <!-- Solution -->
            <div class="mb-6 pb-6 border-b border-gray-200">
              <h3 class="mb-2 text-xs font-semibold uppercase tracking-widest text-gray-500">
                {t('home.usecases.solution')}
              </h3>
              <p class="text-sm text-gray-700 leading-relaxed">
                {t(useCase.solutionKey)}
              </p>
            </div>

            <!-- Result -->
            <div>
              <h3 class="mb-2 text-xs font-semibold uppercase tracking-widest text-gray-500">
                {t('home.usecases.result')}
              </h3>
              <p class="text-sm text-gray-700 leading-relaxed">
                {t(useCase.resultKey)}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA to Projects -->
    <div class="mt-12 text-center">
      <a
        href={`/${lang === 'en' ? '' : lang}/projects`}
        class="inline-flex items-center rounded-lg bg-gray-900 px-6 py-3 font-medium text-white transition-colors hover:bg-gray-800"
      >
        {t('home.usecases.viewProjects')}
        <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .usecase-card {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .usecase-card {
      min-height: 100%;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .usecase-card {
    animation: slideUp 0.3s ease-out;
  }
</style>
