---
import Button from '@components/ui/Button.astro';
import { useTranslations } from '@i18n/utils';

const t = useTranslations('en');
---

<section class="relative overflow-hidden border-b border-gray-200 bg-white py-12 sm:py-16 lg:py-20">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="mb-4 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Ready to collaborate?</h2>
      <p class="font-fuzzy mb-8 text-xl text-gray-600">
        Let's discuss how I can help with your cloud infrastructure, AI solutions, or DevOps
        transformation.
      </p>
      <Button href="/contact" variant="primary">
        {t('home.hero.cta_contact')}
      </Button>
    </div>
  </div>
</section>
